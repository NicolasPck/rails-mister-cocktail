
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://media0.faz.net/ppmedia/aktuell/stil/essen-trinken/3487975854/1.5490128/width610x580/bei-der-arbeit-leo-robitschek.jpg');">
    <div class="container">
      <h1>Your Cocktails</h1>
      <button type="button" class="btn btn-primary p-0 m-2">
        <%= link_to "New Cocktail", new_cocktail_path(@cocktail), class: "btn btn-gradient" %>
      </button>
    </div>
</div>
<div class="row d-flex d-inline-flex p-10 m-5">
  <% @cocktails.each do |cocktail| %>
  <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
    <div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url("http://loremflickr.com/300/300/cocktail")'>
    <tr>
      <li><td><%= link_to cocktail.name, cocktail_path(cocktail) %></td></li>
    </tr>
    </div>
  </div>
  <% end %>
</div>




